<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prism">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.patient.KneeExercise"></activity>
        <activity
            android:name=".ui.patient.WeeklyReport"
            android:label="@string/title_activity_weekly_report"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.patient.DataViewerActivity" />
        <activity android:name=".MainScreenPhysician" />
        <activity android:name=".ui.patient.PainReport" />
        <activity android:name=".ui.patient.LinearChartActivity" />
        <activity
            android:name=".MainScreenPatient"
            android:label="@string/title_activity_main_screen_patient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TestActivity"
            android:keepScreenOn="true"
            android:largeHeap="true"></activity>
        <activity
            android:name=".DvprsEntry"
            android:keepScreenOn="true"
            android:largeHeap="true"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".DvprsLast"
            android:largeHeap="true"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>